# Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_CONCURRENCY=4
CELERY_MAX_TASKS_PER_CHILD=50
CELERY_TASK_SOFT_TIME_LIMIT=7200
CELERY_TASK_TIME_LIMIT=7500

# Storage
TEMP_DIR=/tmp/converter
MAX_UPLOAD_SIZE_MB=4096
MIN_DISK_SPACE_GB=10

# Retry / Webhook
WEBHOOK_MAX_RETRIES=5
WEBHOOK_RETRY_BACKOFF_BASE=2
UPLOAD_MAX_RETRIES=3
UPLOAD_RETRY_BACKOFF_BASE=2

# Cleanup
TEMP_FILE_TTL_SECONDS=3600

# FFmpeg
FFMPEG_BIN=ffmpeg

# Security
ALLOW_HTTP_CALLBACKS=false
ALLOW_PRIVATE_IPS=false
